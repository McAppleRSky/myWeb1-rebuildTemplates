%html(lang="ru")
	%head
		:javascript
			var htmPage = "index"; // Главная страница
			$(function(){
				$('#li-menu0').children().first().attr('href','#');
				$('.tdMenu10').first().empty();
				$('.tdMenu10').last().children().attr('href','page1.htm');
			});
		= Haml::Engine.new(File.read("head.haml")).render
		%link(href="css/top-menu-page0.css" rel="stylesheet" type="text/css")
		%title
			Мой персональный Веб-сайт
	%body
		%header
			= Haml::Engine.new(File.read("nav.haml")).render
			= Haml::Engine.new(File.read("figure-h1.haml")).render
		%section#boderSection
		%aside
			= Haml::Engine.new(File.read("aside.haml")).render
		%main
			%article
				%h2
					Личные данные
				%br
				%dl
					%dt
						Имя:
					%dd
						Борисов Евгений Александрович
						%br
					%dt
						студент СевГУ группы:
					%dd
						а31з
						%br
					%dt
						Номер и название работы:
						Контрольная работа по дисциплине: «Веб-технологии»;
					%dd
						%ol
							-@array_themas.each do |value|
								%li #{value}
			%nav
				%h2
					Страницы сайта
				%p
					Гиперссылки на страницы сайта:
				%ul
					-@array_pages.each do |key, value|
						%li
							%a(href="#{key}") #{value}
			%div
				%p
					Сам погибай, а систему
					= succeed "." do
						%em
							выключай
		%footer
			= Haml::Engine.new(File.read("footer.haml")).render
